  "dependencies": {
    "@babel/core": "7.2.2",
    "@babel/preset-env": "7.2.3",
    "@babel/preset-react": "7.0.0",
    "@babel/preset-typescript": "7.1.0",
    "@tdb/electron": "0.0.20",
    "@tdb/log": "1.1.23",
    "@tdb/util": "1.9.31",
    "@uiharness/electron": "0.3.61",
    "@uiharness/types": "0.0.22",
    "create-tmpl": "0.1.1",
    "electron": "4.0.3",
    "electron-builder": "20.38.5",
    "execa": "1.0.0",
    "filesize": "4.0.0",
    "parcel-bundler": "1.11.0",
    "serve": "10.1.1",
    "yargs": "12.0.5"
